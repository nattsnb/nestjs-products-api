generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  priceInPLNgr String
  isInStock    Boolean @default(false)
  description  String
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  name        String
  phoneNumber String?
}
