generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int        @id @default(autoincrement())
  name         String     @unique
  priceInPLNgr String
  isInStock    Boolean    @default(false)
  description  String
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
  categories   Category[]
}

model User {
  id             Int           @id @default(autoincrement())
  email          String        @unique
  password       String
  name           String
  phoneNumber    String?
  address        Address?      @relation(fields: [addressId], references: [id])
  addressId      Int?          @unique
  products       Product[]
  profileImage   ProfileImage? @relation(fields: [profileImageId], references: [id])
  profileImageId Int?          @unique
  comments       Comment[]
  books          Book[]
}

model Address {
  id      Int    @id @default(autoincrement())
  street  String
  city    String
  country String
  user    User?
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model ProfileImage {
  id   Int    @id @default(autoincrement())
  url  String
  user User?
}

model Comment {
  id     Int    @id @default(autoincrement())
  text   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Book {
  id           Int    @id @default(autoincrement())
  title        String
  priceInPLNgr String
  authors      User[]
}
