generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  priceInPLNgr String
  isInStock    Boolean @default(false)
  description  String
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  name        String
  phoneNumber String?
  address     Address? @relation(fields: [addressId], references: [id])
  addressId   Int?     @unique
}

model Address {
  id      Int    @id @default(autoincrement())
  street  String
  city    String
  country String
  User    User[]
}
